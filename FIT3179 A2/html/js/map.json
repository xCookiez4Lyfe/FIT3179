{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "#f0f0f0",
  "title": "Koala locations",
  "width": 900,
  "height": 500,
  "params": [
    {
      "name": "Year_selection",
      "value": 2018,
      "bind": {
        "input": "range",
        "min": 2018,
        "max": 2022,
        "step": 1,
        "name": "Year:  "
      }
    },
    {
      "name": "zoom_level",
      "value": 7500,
      "bind": {
        "input": "range",
        "min": 7500,
        "max": 60000,
        "step": 100,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_to",
      "value": [152.5, -26.9],
      "bind": {
        "input": "select",
        "options": [
          [152.5, -26.9],
          [152.9, -27.5],
          [152.5, -25.5],
          [153.3, -28],
          [152.5, -26.3],
          [152.6, -27.6],
          [152.2, -27.5],
          [153, -27.7],
          [152.9, -27.1],
          [152.9, -26.3],
          [153.3, -27.5],
          [152.7, -28],
          [152.4, -27.1],
          [151.6, -26.3],
          [151.8, -28.4],
          [152.9, -26.6],
          [151.5, -27.5],
          [150.1, -27]
        ],
        "labels": [
          "Recenter",
          "Brisbane",
          "Fraser Coast",
          "Gold Coast",
          "Gympie",
          "Ipswich",
          "Lockyer Valley",
          "Logan",
          "Moreton Bay",
          "Noosa",
          "Redland",
          "Scenic Rim",
          "Somerset",
          "South Burnett",
          "Southern Downs",
          "Sunshine Coast",
          "Toowoomba",
          "Western Downs"
        ],
        "name": "Map Centre: "
      }
    },
    {
      "name": "LGA_selection",
      "value": "null",
      "bind": {
        "input": "select",
        "options": [
          "null",
          "Brisbane City ",
          "Fraser Coast Regional ",
          "Gold Coast City ",
          "Gympie Regional ",
          "Ipswich City ",
          "Lockyer Valley Regional ",
          "Logan City ",
          "Moreton Bay Regional ",
          "Noosa Shire ",
          "Redland City ",
          "Scenic Rim Regional ",
          "Somerset Regional ",
          "South Burnett Regional ",
          "Southern Downs Regional ",
          "Sunshine Coast Regional ",
          "Toowoomba Regional ",
          "Western Downs Regional "
        ],
        "labels": ["All LGAs"],
        "name": "Local Government Area: "
      }
    }
  ],
  "projection": {
    "type": "equirectangular",
    "center": {"expr": "center_to"},
    "scale": {"expr": "zoom_level"}
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/xCookiez4Lyfe/FIT3179/refs/heads/main/FIT3179%20A2/map%20data/map_projection.topojson",
        "format": {"type": "topojson", "feature": "lgas"}
      },
      "mark": {"type": "geoshape", "fill": "#ffffff", "stroke": "lightgrey"},
      "encoding": {
        "tooltip": [
          {"field": "properties.adminarean", "type": "nominal", "title": "Local Government Area"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/xCookiez4Lyfe/FIT3179/refs/heads/main/FIT3179%20A2/map%20data/map_projection.topojson",
        "format": {"type": "topojson", "feature": "ocean"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#24aad6",
        "stroke": "darkgrey",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/xCookiez4Lyfe/FIT3179/refs/heads/main/FIT3179%20A2/koala%20data%20(clean)/koala-hospital-data-2018-2022.csv"
      },
      "transform": [
        {"filter": "datum.Year == Year_selection"},
        {"window": [{"op": "rank", "as": "rank"}]},
        {
          "filter": "LGA_selection=='null'?datum.rank <= 5000:datum.LGA == LGA_selection"
        }
      ],
      "mark": {"type": "circle", "size": 15},
      "encoding": {
        "longitude": {"field": "LNG", "type": "quantitative"},
        "latitude": {"field": "LAT", "type": "quantitative"},
        "color": {
          "value":"#89a2aa"
        },

        "tooltip": [
          {"field": "Koala Name", "type": "nominal", "title": "Name"},
          {"field": "Adult Size", "type": "nominal", "title": "Size"},
          {"field": "LAT", "type": "quantitative", "title": "Latitude"},
          {"field": "LNG", "type": "quantitative", "title": "Longitude"}
        ]
      }
    }
  ]
}