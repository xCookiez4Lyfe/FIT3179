{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "background": "#f0f0f0",
    "title": "Distribution of koalas by size",
    "width": 500,
    "height": 450,
    "data": {
      "url": "https://raw.githubusercontent.com/xCookiez4Lyfe/FIT3179/main/FIT3179%20A2/koala%20data%20(clean)/koala-hospital-data-2018-2022.csv"
    },
    "transform": [
      {
        "filter": "datum['Adult Size'] != null" 
      },
      {
        "calculate": "year(datum['Call Date Time'])",
        "as": "Year"
      },
      {
        "filter": "year_selection == null || datum.Year == year_selection"
      }
    ],
    "params": [
      {
        "name": "year_selection",
        "value": null,
        "bind": {
          "input": "select",
          "options": [null, 2018, 2019, 2020, 2021, 2022],
          "labels": ["All Years", "2018", "2019", "2020", "2021", "2022"],
          "name": "Select Year: "
        }
      },
      {
        
        "name": "koala_size",
        "select": {"type": "point", "fields": ["Adult Size"]},
        "bind": "legend"
      }
    ],
    "mark": {
      "type": "arc",
      "innerRadius": 100
    },
    "encoding": {
      "theta": {
        "field": "Adult Size",
        "type": "quantitative",
        "aggregate": "count"
      },
      "opacity": {
        "condition": {"param": "koala_size", "value": 1},
        "value": 0.1
      },
      "color": {
        "field": "Adult Size",
        "type": "nominal",
        "legend": {"title": "Koala size"},
        "scale": {
          "range": ["#134757", "#207a8c", "#ac7559"]
        }
      },
      "tooltip": [
        {
          "field": "Adult Size",
          "type": "nominal",
          "title": "Size"
        },
        {
          "field": "__count",
          "type": "quantitative",
          "title": "Count"
        }
      ]
    }
  }
  